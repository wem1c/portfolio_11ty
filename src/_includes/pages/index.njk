---
components: split-flap
---

{% extends "layouts/base.njk" %}

{% block content %}
    <main id="hero" class="hero">
        <h1>Hello there! ðŸ‘‹</h1>
        <h1>
            I'm <span class="color-secondary">Conor C.,</span>
        </h1>
        <h2 class="font-semi">
            your friendly neighborhood <split-flap-display data-words="programmer, developer, engineer, spiderman">programmer</split-flap-display>
        </h2>
    </main>

    <section id="projects" class="[ box invert ] [ stack ] [ projects ]">
        <h2 id="section-title">Projects</h2>

        <div id="project-grid"
             class="[ flex-grid ] [ list-style-type-none padding-inline-start-none ]"
             data-justify="center">

            {% for project in projects %}
                <div id="project-card" class="[ relative ]">
                    <div id="project-image" class="[ frame ]">{% image project.imageSrc, "Website's homepage", ["auto"], "100vw" %}</div>
                    <h3 id="project-label" class="project__label">{{ project.title }}</h3>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock content %}
