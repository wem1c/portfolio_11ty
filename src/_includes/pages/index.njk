---
components: split-flap
---

{% extends "layouts/base.njk" %}

{% block content %}
    <main id="hero"
          class="hero | grid | align-items-center"
          data-justify="around">
        <header>
            <h1 class="margin-block-start-none">Hello there! 👋</h1>

            <br />

            <h2>
                I'm <span class="text-primary">Conor C.</span>,
            </h2>

            <br />

            <h3>
                Your friendly neighborhood <split-flap-display class="text-primary" data-words="programmer! ⌨️, developer! 💻, engineer! ⚙️, spiderman! 🕷️">programmer</split-flap-display>
            </h3>
        </header>

        <is-land on:media="(prefers-reduced-motion: no-preference)" class="aspect-3-2">
        <animated-flag columns="10" class="aspect-3-2"></animated-flag>
        </is-land>
    </main>

    <hr />

    <section id="projects"
             class="box stack | projects | border-none padding-inline-2xs-3xl">
        <header id="projects-header">
            <h2 id="projects-title">Latest Projects</h2>
        </header>

        <div id="project-grid" class="flex-grid" data-justify="center">
            {% for project in projects %}
                <div id="project-card" class="[ relative ]">
                    <a href="{{ project.url }}"
                       aria-label="{{ "Visit the " + project.title + " website." }}">
                        <div id="project-image" class="[ frame ]">
                            {% image project.imageSrc, project.title + "'s homepage.", [660, 385], "(max-width: 1024px) 90vw, 45vw" %}
                        </div>
                        <h3 id="project-label" class="project__label">{{ project.title }}</h3>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>

    <hr />

    <section id="repos"
             class="repos | box stack | border-none padding-inline-3xs-3xl">
        <header id="repos-header">
            <h2 id="repos-title">Latest Code</h2>
            <a href="https://github.com/wem1c?tab=repositories" class="color-black"><small>View all</small></a>
        </header>

        <div id="repo-grid"
             class="flex-grid | list-style-type-none padding-inline-start-none ]">

            {% if repos.length > 0 %}
                {% for repo in repos %}
                    <a href={{ repo.html_url }}>
                        <div id="repo-card" class="[ relative ]">
                            <h3 id="repo-name">{{ repo.name }}</h3>
                            <p id="repo-desc">{{ repo.description }}</p>
                        </div>
                    </a>
                {% endfor %}
            {% else %}
                <p>No repo data found.</p>
            {% endif %}
        </div>
    </section>
{% endblock content %}
