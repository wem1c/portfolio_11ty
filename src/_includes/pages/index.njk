{% extends "layouts/base.njk" %}

{% block content %}
    <main id="hero"
          class="hero | grid | align-items-center"
          data-justify="around">
        <header>
            <h2 class="margin-block-start-none">Hello there! ðŸ‘‹</h2>
            <h1>I'm Conor C.,</h1>
            <h3 class="font-semi">
                Your friendly neighborhood <split-flap-display class="text-accent text-xl text-shadow text-bold" data-words="programmer! âŒ¨ï¸, developer! ðŸ’», engineer! âš™ï¸, spiderman! ðŸ•·ï¸">programmer</split-flap-display>
            </h3>
        </header>
        <animated-flag columns="10"></animated-flag>
    </main>

    <hr />

    <section id="projects"
             class="box stack | projects | border-none padding-inline-3xs-3xl">
        <header id="projects-header">
            <h2 id="projects-title">Latest Projects</h2>
        </header>

        <div id="project-grid" class="flex-grid" data-justify="center">
            {% for project in projects %}
                <div id="project-card" class="[ relative ]">
                    <a id="project-link" href="{{ project.url }}">
                        <div id="project-image" class="[ frame ]">{% image project.imageSrc, "Website's homepage", ["auto"], "100vw" %}</div>
                        <h3 id="project-label" class="project__label">{{ project.title }}</h3>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>

    <hr />

    <section id="repos"
             class="repos | box stack | border-none padding-inline-3xs-3xl">
        <header id="repos-header">
            <h2 id="repos-title">Latest Repos</h2>
            <a href="https://github.com/wem1c" class="color-black"><small>View all</small></a>
        </header>

        <div id="repo-grid"
             class="flex-grid | list-style-type-none padding-inline-start-none ]">

            {% if repos.length > 0 %}
                {% for repo in repos %}
                    <a href={{ repo.html_url }}>
                        <div id="repo-card" class="[ relative ]">
                            <h3 id="repo-name">{{ repo.name }}</h3>
                            <p id="repo-desc">{{ repo.description }}</p>
                        </div>
                    </a>
                {% endfor %}
            {% else %}
                <p>No repo data found.</p>
            {% endif %}
        </div>
    </section>
{% endblock content %}
