{% extends "layouts/base.njk" %}

{% block content %}
    <main id="about"
          class="about | box cluster | border-none"
          data-justify="center">
        <aside id="about__image" class="about__image | stack" data-align="center">
            <small><em>{{ dictionary.me[locale] }}</em></small>

            <div id="image-container" class="image-container | frame">
                {% image "./src/assets/images/pfp_circle.png", "Conor C.'s profile picture", ["auto"], "100vw" %}
            </div>

            <a href="mailto:conorpetersondev@gmail.com" class="button">Email me!</a>
        </aside>

        <article class="about__bio">
            <h2>Bio</h2>

            {% for paragraph in dictionary.bio[locale] %}<p>{{ paragraph }}</p>{% endfor %}
        </article>
    </main>

    <hr />

    <section id="tech" class="box | border-none padding-inline-2xs-3xl">
        <header>
            <h2>Tech I Use</h2>
        </header>
    </section>
{% endblock content %}
