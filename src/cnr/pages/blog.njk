{% for post in collections.posts_cnr | reverse %}
    {% if loop.first %}
        <ul>
        {% endif %}
        <li>
            <article>
                <p>
                    <time datetime="{{ post.date | date('Y-MM-DD') }}">{{ post.date | date("DD MMMM[,] Y", locale) }}</time>
                </p>
                <h3>
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h3>
            </article>
        </li>
        {% if loop.last %}
        </ul>
    {% endif %}
{% endfor %}