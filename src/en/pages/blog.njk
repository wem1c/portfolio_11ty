---
permalink: /{{locale}}/blog.html
---

<h1>Blog</h1>
{% for post in collections.posts_cnr | reverse %}
    {% if loop.first %}
        <ul>
        {% endif %}
        <li>
            <article>
                <p>
                    <time datetime="{{ post.date }}">{{ post.date }}</time>
                </p>
                <h3>
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h3>
            </article>
        </li>
        {% if loop.last %}
        </ul>
    {% endif %}
{% endfor %}